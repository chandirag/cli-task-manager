{
	"compilerOptions": {
		"target": "es2020", // Latest ECMAScript features supported by Node.js
		"module": "commonjs", // CommonJS modules for Node.js
		"rootDir": "src", // Source files location
		"outDir": "dist", // Compiled JavaScript output location
		"strict": true, // Enables strict type-checking
		"esModuleInterop": true, // Better compatibility with ES6 modules
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true // Speeds up compilation by skipping library checks
	},
	"include": ["src"], // Include all files in src directory
	"exclude": ["node_modules", "dist"] // Exclude node_modules and compiled files
}
